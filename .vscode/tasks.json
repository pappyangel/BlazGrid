{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "build-bfake",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/bfake/bfake.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },                        
        {
            "label": "buildGrid",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/blazgrid/blazgrid.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        }
	]
}